#include <stdio.h>
int n,frr[20],arr[20],visited=-1;
void getdata();
void printdata();
void frequency();
void histogram();
void main()
{
    getdata();
    printdata();
    frequency();
    histogram();
}
void getdata()
{
    int i;
    printf("Enter the no of elements: ");
    scanf("%d",&n);
    printf("Enter the elements ");
    for(i=0;i<n;i++)
    scanf("%d",&arr[i]);
}
void printdata()
{
    if(n==0)
    printf("Array is empty");
    else
    printf("The elements are:\n");
    for(int i=0;i<n;i++)
    {
    printf("%d ",arr[i]);
    }
}
void frequency()
{
    int count,j;
    for(int i=0;i<n;i++)
    {
        count=1;
        for(j=i+1;j<n;j++)
        {
            if(arr[i]==arr[j])
            {
                count++;
                frr[j]=visited;
            }
        }
        if(frr[i]!=visited)
        frr[i]=count;
    }
}
void histogram()
{
    printf("\nElement/frequency\n");
    printf("-----------------\n");
    for(int i=0;i<n;i++)
    {
        if(frr[i]!=visited)
        {
        printf("%d",arr[i]);
        printf("|");
        for(int j=0;j<frr[i];j++)
        {
            printf("*");
            
        }
        printf("\n");
        }
    }
}

